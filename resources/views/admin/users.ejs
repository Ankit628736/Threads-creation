<%- include('../layout') %>

<div class="container mx-auto py-8 px-4">
    <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800">User Management</h1>
            <a href="/admin/users/create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Add New User
            </a>
        </div>

        <% if (users && users.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border border-gray-300">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="py-2 px-4 border-b text-left">Name</th>
                            <th class="py-2 px-4 border-b text-left">Email</th>
                            <th class="py-2 px-4 border-b text-left">Role</th>
                            <th class="py-2 px-4 border-b text-left">Created</th>
                            <th class="py-2 px-4 border-b text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(userItem) { %>
                            <tr class="hover:bg-gray-50">
                                <td class="py-2 px-4 border-b">
                                    <div class="font-medium text-gray-900"><%= userItem.name %></div>
                                </td>
                                <td class="py-2 px-4 border-b">
                                    <div class="text-gray-600"><%= userItem.email %></div>
                                </td>
                                <td class="py-2 px-4 border-b">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                        <%= userItem.role === 'admin' ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>">
                                        <%= userItem.role %>
                                    </span>
                                </td>
                                <td class="py-2 px-4 border-b text-sm text-gray-500">
                                    <%= moment(userItem.createdAt).format('MMM DD, YYYY') %>
                                </td>
                                <td class="py-2 px-4 border-b">
                                    <div class="flex space-x-2">
                                        <!-- Role Toggle -->
                                        <form action="/admin/users/role" method="POST" class="inline">
                                            <input type="hidden" name="userId" value="<%= userItem._id %>">
                                            <input type="hidden" name="role" value="<%= userItem.role === 'admin' ? 'customer' : 'admin' %>">
                                            <button type="submit" class="text-blue-600 hover:text-blue-900 text-sm">
                                                Make <%= userItem.role === 'admin' ? 'Customer' : 'Admin' %>
                                            </button>
                                        </form>

                                        <!-- Reset Password -->
                                        <form action="/admin/users/reset-password" method="POST" class="inline">
                                            <input type="hidden" name="userId" value="<%= userItem._id %>">
                                            <button type="submit" class="text-yellow-600 hover:text-yellow-900 text-sm"
                                                onclick="return confirm('Reset password to password123?')">
                                                Reset Password
                                            </button>
                                        </form>

                                        <!-- Delete User -->
                                        <% if (userItem._id.toString() !== user._id.toString()) { %>
                                            <form action="/admin/users/<%= userItem._id %>" method="POST" class="inline">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <button type="submit" class="text-red-600 hover:text-red-900 text-sm"
                                                    onclick="return confirm('Are you sure you want to delete this user?')">
                                                    Delete
                                                </button>
                                            </form>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-8">
                <div class="text-gray-500">No users found</div>
            </div>
        <% } %>
    </div>

    <!-- User Statistics -->
    <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-2xl font-bold text-blue-600"><%= users.length %></div>
            <div class="text-gray-600">Total Users</div>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-2xl font-bold text-red-600">
                <%= users.filter(u => u.role === 'admin').length %>
            </div>
            <div class="text-gray-600">Admins</div>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-2xl font-bold text-green-600">
                <%= users.filter(u => u.role === 'customer').length %>
            </div>
            <div class="text-gray-600">Customers</div>
        </div>
    </div>

    <!-- Debug Information -->
    <div class="mt-6 bg-gray-100 rounded-lg p-4">
        <h3 class="font-bold mb-2">Quick Login Credentials (for testing):</h3>
        <div class="text-sm text-gray-700 space-y-1">
            <% users.forEach(function(userItem) { %>
                <div>
                    <strong><%= userItem.email %></strong> | Password: 
                    <%= userItem.email === 'debug@test.com' ? 'test123' : 'password123' %> 
                    (<%= userItem.role %>)
                </div>
            <% }) %>
        </div>
    </div>
</div>

<script>
    // Auto-refresh page every 30 seconds to see new users
    setTimeout(() => {
        window.location.reload();
    }, 30000);
</script>